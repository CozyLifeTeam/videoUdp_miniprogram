.container {
    width: 100%;
    min-height: 100vh;
}

.videoArea {
    position: relative;
    width: 100%;
    height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    /* background-color: pink; */
}

.videoArea image {
    /* margin-left: 100rpx; */
    background-color: #000;
    position: relative;
}

.videoBtn,
.audioBtn {
    width: 100%;
}

.networkBad {
    position: absolute;
    top: 0;
    width: 100%;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    background-color: rgba(0, 0, 0, 0.26);
}

.audioBtn {
    padding: 50rpx 0;
}

.duration {
    width: 100%;
    display: flex;
    justify-content: center;
    margin: 40rpx 0;
    margin-bottom: 90rpx;
    color: var(--color-h2)
}

.row {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin: 40rpx 0;
}

.boxColumn {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.txt {
    margin-top: 10rpx;
}

.icon {
    width: 90rpx;
    height: 90rpx;
}
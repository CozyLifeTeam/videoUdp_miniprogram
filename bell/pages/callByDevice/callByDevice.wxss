.container {
    width: 100%;
    min-height: 100vh;
}

.videoArea {
    width: 100%;
    height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    /* background-color: pink; */
}

.videoArea image {
    z-index: 1;
}

.bowen1 {
    position: absolute;
    width: 500rpx;
    height: 500rpx;
    background-color: #00b292;
    opacity: 0.1;
    border-radius: 50%;
    animation: bowen1 3s ease 0s infinite;
}

.bowen2 {
    position: absolute;
    width: 500rpx;
    height: 500rpx;
    background-color: #00b292;
    opacity: 0.3;
    border-radius: 50%;
    animation: bowen2 1.5s ease 0s infinite;
}

.audioBtn {
    width: 100%;
    padding: 50rpx 0;
}

.info {
    width: 100%;
    text-align: center;
    margin-bottom: 90rpx;
    color: var(--color-h1)
}

.row {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin: 40rpx 0;
}

.boxColumn {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.txt {
    margin-top: 10rpx;
}

.icon {
    width: 90rpx;
    height: 90rpx;
}

@keyframes bowen1 {
    0% {
        scale: 1;
    }

    30% {
        opacity: 0.1;
    }

    100% {
        scale: 1.2;
        opacity: 0;
    }
}

@keyframes bowen2 {
    0% {
        scale: 1;
    }

    75% {
        scale: 1.1;
    }

    100% {
        scale: 1.1;
        opacity: 0;
    }
}